<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- unknown text content -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_error_message"
        android:id="@+id/txt_config_error_message"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:scrollbars="vertical"/>

    <ListView
        android:id="@+id/list_config_errors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>

    <TextView
        android:id="@+id/tap_ok_to_launch_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_error_suffix"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/btn_unknown_ok"
            android:minWidth="100sp"/>
    </LinearLayout>


</LinearLayout>